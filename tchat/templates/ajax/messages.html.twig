{% if ajax_result == 'refreshMessage' %}
  {% for message in messages %}
    {% if message.id_user != app.user.id %}
      <div class="incoming_msg_img">
        <img src="{{ asset('img/user-profile.png') }}"
          alt="sunil" />
      </div>
      <div class="received_msg">
        <div class="received_withd_msg">
          <p>
            {{ message.message }}
          </p>
          <span class="time_date">{{ message.date_add }}</span>
        </div>
      </div>
    {% endif %}

    {% if message.id_user == app.user.id %}
      <div class="outgoing_msg">
        <div class="sent_msg">
          <p>
            {{ message.message }}
          </p>
          <span class="time_date">{{ message.date_add }}</span>
        </div>
      </div>
    {% endif %}
  {% endfor %}
{% endif %}
